<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Radiostation.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark text-decoration-none text-lg" asp-area="" asp-controller="Genre" asp-action="Index">🎵 Жанры</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark text-decoration-none text-lg" asp-area="" asp-controller="Performer" asp-action="Index">🎤 Исполнители</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark text-decoration-none text-lg" asp-area="" asp-controller="Track" asp-action="Index">💿 Записи</a>
                    </li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark text-decoration-none text-lg" asp-area="" asp-controller="Users" asp-action="Index">Управление пользователями</a>
                        </li>
                    }
                    <li class="nav-item">
                        <form method="post" class="text-dark" asp-controller="Account" asp-action="Logout">
                            <input class="btn text-danger" type="submit" value="Выход"/>
                        </form>
                    </li>
                </ul>
            </div>
    </nav>
</header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>