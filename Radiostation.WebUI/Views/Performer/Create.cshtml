@model Radiostation.DAL.Entities.Performer

@{ ViewData["Title"] = "Создание"; }

<div class="container">
    <h1>Добавление</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input id="isGroupCheckbox" asp-for="IsGroup" class="form-check-input"/>
                    <label asp-for="IsGroup" class="form-check-label"></label>
                    <span asp-validation-for="IsGroup" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GroupList" class="control-label"></label>
                    <textarea readonly="readonly" id="groupListTextarea" asp-for="GroupList" class="form-control"></textarea>
                    <span asp-validation-for="GroupList" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            $("#groupListTextarea").val("N/A")
            $("#isGroupCheckbox").click(function ()
            {
                console.log($(this)[0].checked)
                if ($(this)[0].checked === true) {
                    $("#groupListTextarea").val("").removeAttr("readonly");
                } else {
                    $("#groupListTextarea").val("N/A").attr("readonly", "readonly");
                }
            })
        })
    </script>
}